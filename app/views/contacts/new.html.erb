<div class="container">
  <h5 class="my-3">
    お問い合わせフォーム
  </h5>
  <div class="row">
    <div class="col-sm-10">

      
      <%= form_with model: @contact, local: true, url: {action: :confirm} do |f| %>
     
      <%= render 'layouts/error_messages', model: f.object %>

        <div class="form-groups">
          <%= f.label :name, 'お名前 必須' %>
          <div style="display: flex;">
          <%= f.text_field :last_name, autofocus: true,placeholder:'鈴木', class:'form-control' %>
          <%= f.text_field :first_name,  placeholder:'太郎', class:'form-control' %>
        </div>
        </div>
        <div class="form-group">
          <%= f.label :email, 'メールアドレス 必須' %>
          <%= f.text_field :email, placeholder:'test@hoge.com', class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :message, 'お問い合わせ内容' %>
          <%= f.text_area :message, placeholder:'お問い合わせ内容は10文字以上でお願いします', class:'forms-control' %>
        </div>
        </br>
        <h5 class="my-3">
        振込をご希望の方はこちら↓
        </h5>
         <h2 class="my-2">
        振込金額の10%が手数料としてかかります。
        </h2>
        <div class="form-group">
         <div style="display: flex;">
        残高 ¥<%= current_user.money %>
        </div>
        </div>
        <div class="form-group">
          <%= f.label :amount, '振込金額' %>
          <div style="display: flex;">
          ¥<%= f.text_field :amount, placeholder:'',id: 'transfer_amount', class:'form-control' %>
        </div>
        </div>
        <div class="form-group">
          <%= f.label :commission, '手数料' %>
          <div style="display: flex;">
          ¥<%= f.text_field :commission, placeholder:'', id: 'transfer_commission', readonly: true, class:'form-control' %>
        </div>
        </div>
         <div class="form-group">
          <%= f.label :bank, '銀行名' %>
          <%= f.text_field :bank, placeholder:'', class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :branch, '支店番号' %>
          <%= f.text_field :branch, placeholder:'', class:'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :account, '口座番号' %>
          <%= f.text_field :account, placeholder:'', class:'form-control' %>
        </div>

        <div class="d-flex justify-content-center mb-5">
          <%= f.submit "確認画面へ進む", data: { turbo: "false" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>