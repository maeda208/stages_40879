<div class="container">
  <h5 class="my-3">
    お問い合わせ内容確認
  </h5>
  <div class="row">
    <div class="col-sm-10 mx-auto">
      <%= form_with model: @contact, local: true, url: {action: 'create'}, method: :post do |f| %>
        <div class="form-group border-bottom">
          <%= f.label :name, 'お名前' %>
          <%= @contact.last_name %>
          <%= @contact.first_name %>
          <%= f.hidden_field :first_name, :value => @contact.first_name %>
          <%= f.hidden_field :last_name, :value => @contact.last_name %>
        </div>
        <div class="form-group border-bottom">
          <%= f.label :email, 'メールアドレス' %>
          <%= @contact.email %>
          <%= f.hidden_field :email, :value => @contact.email %>
        </div>
        <div class="form-group border-bottom">
          <%= f.label :message, 'お問い合わせ内容' %>
          <%= @contact.message %>
          <%= f.hidden_field :message, :value => @contact.message %>
        </div>
        <div class="form-group border-bottom">
          <%= f.label :amount, '振込金額' %>
          <%= @contact.amount %>
          <%= f.hidden_field :amount, :value => @contact.amount %>
        </div>
        <div class="form-group border-bottom">
          <%= f.label :commission, '手数料' %>
          <%= @contact.commission %>
          <%= f.hidden_field :commission, :value => @contact.commission %>
        </div>
        <div class="form-group border-bottom">
          <%= f.label :bank, '銀行' %>
          <%= @contact.bank %>
          <%= f.hidden_field :bank, :value => @contact.bank %>
        </div>
        <div class="form-group border-bottom">
          <%= f.label :branch, '支店番号' %>
          <%= @contact.branch %>
          <%= f.hidden_field :branch, :value => @contact.branch %>
        </div>
         <div class="form-group border-bottom">
          <%= f.label :account, '口座番号' %>
          <%= @contact.account %>
          <%= f.hidden_field :account, :value => @contact.account %>
        </div>
        <div class="d-flex justify-content-center mb-5">
          <%= f.submit '送信する', class:'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>